<h1>Yum Yum Burgers</h1>


<h3>List of burgers</h3>
<div class="row">


    <div class="col s12 m6">
        <h5>List of burgers to eat</h5>
        <ul>
            {{#each burgers}}
            {{#unless eaten}}
            {{>burgers/burger-block eaten=true}}
            {{/unless}}

            {{/each}}
        </ul>

    </div>
    <div class="col s12 m6">
        <h5>List of burgers that have already been eaten</h5>
        <ul>
            {{#each burgers}}
            {{#if eaten}}
            {{>burgers/burger-block eaten=false}}
            {{/if}}
            {{/eachs}}
        </ul>
    </div>



    <div class="row">
        <div class="col s12">
            <form class="create-form">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="burger" name="name">
                </div>

                <button type="submit">Add Burger</button>
            </form>

        </div>
    </div>


</div>