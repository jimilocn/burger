<div class="container center">
    <div class="row">
        <h1>Yum Yum Burgers</h1>
        <h5>A site for the world traveling hamburger consumer. Collect them all and keep track along the way!</h5>
    </div>

    <div class="row">
        <h3>List of burgers</h3>
    </div>


    <div class="row">


        <div class="col s12 m6">
            <h5>List of burgers to eat</h5>
            <ul>
                {{#each burgers}}
                {{#unless eaten}}
                {{> burgers/burger-block eaten=true}}
                {{/unless}}

                {{/each}}
            </ul>

        </div>
        <div class="col s12 m6">
            <h5>List of burgers already eaten</h5>
            <ul>
                {{#each burgers}}
                {{#if eaten}}
                {{> burgers/burger-block eaten=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>


    </div>

    <div class="row">
        <div class="col s12 center">
            <h3>Add a New Burger!</h3>
        </div>

    </div>


    <div class="row">
        <div class="col s3"></div>
        <div class="col s6">
            <form class="create-form">

                <div class="form-group">
                    <label for="burg">Burger Name:</label>
                    <input type="text" id="burger" name="name">
                </div>

                <button type="submit">Add Burger</button>
            </form>

        </div>
        <div class="col s3"></div>
    </div>


</div>